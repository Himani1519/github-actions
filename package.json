{
  "name": "zlux-app-server",
  "version": "1.0.0",
  "main": "lib/zluxServer.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "build": "exit 0",
    "test": "echo \"Warning: no test specified\" && exit 0",
    "lint:js": "eslint .", // ESLint for JavaScript
    "lint:sh": "find . -type f -name '*.sh' -exec shellcheck {} +", // ShellCheck for Shell Scripts
    "lint:bat": "find . -type f -name '*.bat' -exec dos2unix -k {} +", // dos2unix for Batch Files
    "lint": "npm run lint:js && npm run lint:sh && npm run lint:bat" // To lint all file types
  },
  "dependencies": {
    "mkdirp": "~0.5.1",
    "zlux-server-framework": "file:../zlux-server-framework"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "dos2unix": "^1.1.2",
    "eslint": "^8.52.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.29.0",
    "shellcheck": "^2.2.0"
  }
}
